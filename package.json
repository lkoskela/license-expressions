{
  "name": "license-expressions",
  "version": "0.1.0",
  "description": "Pure-JavaScript (TypeScript) parser for SPDX expressions",
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^28.1.2",
    "@types/node": "^16.11.9",
    "jest": "^28.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.4.0",
    "tspeg": "^3.2.0",
    "typescript": "^4.7.4"
  },
  "compilerOptions": {
    "module": "commonJs",
    "target": "es6",
    "outDir": "build/",
    "lib": [
      "es6"
    ]
  },
  "files": [
    "./src/cli.ts",
    "./src/index.ts"
  ],
  "bin": {
    "spdx": "build/cli.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/codegen/**/*.ts"
    ],
    "coveragePathIgnorePatterns": ["src/cli.ts"]
  },
  "scripts": {
    "test": "npm run build && npx jest --all --coverage --verbose",
    "build": "npm run codegen && tsc",
    "codegen": "npx tspeg src/codegen/parser.peg src/codegen/parser.ts",
    "eval": "npm run build && node build/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lkoskela/license-expressions.git"
  },
  "keywords": [
    "spdx",
    "license",
    "licence",
    "parser",
    "parsing",
    "ast"
  ],
  "author": "Lasse Koskela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lkoskela/license-expressions/issues"
  },
  "homepage": "https://github.com/lkoskela/license-expressions#readme"
}
