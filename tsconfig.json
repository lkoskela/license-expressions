{
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "files": ["src/local-types/global.d.ts"],
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2017", "ES2016", "ES2015"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
        "node_modules/@types",
        "src/local-types"
    ]
  }
}
